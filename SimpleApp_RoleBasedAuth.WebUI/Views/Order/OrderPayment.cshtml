@model Order
@{
    ViewData["Title"] = Model.NameSurname + " Order Detail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="container">
    <div>
        <dl class="row">
            <dt class="col-sm-2">Name Surname</dt>
            <dd class="col-sm-10">@Model.NameSurname</dd>
            <dt class="col-sm-2">Email Address</dt>
            <dd class="col-sm-10">@Model.EmailAddress</dd>
            <dt class="col-sm-2">Address</dt>
            <dd class="col-sm-10">@Model.Address</dd>
            <dt class="col-sm-2">Payment System</dt>
            <dd class="col-sm-10">@Model.Payment.Name</dd>
            <dt class="col-sm-2">Order Date</dt>
            <dd class="col-sm-10">@Model.CreatedDate.ToLongDateString()</dd>
        </dl>
    </div>
</div>